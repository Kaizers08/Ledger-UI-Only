<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background color -->
    <solid android:color="@android:color/white" />

    <!-- rounded corners -->
    <corners android:radius="15dp" />

    <!-- optional border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>